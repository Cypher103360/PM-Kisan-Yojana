<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/item_bg"
    android:elevation="3dp"
    android:id="@+id/constraint"
    android:orientation="vertical">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/question_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E0F7FA"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="15dp"
                android:text="Chisels and hammers are the tools of what kind of artist?"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/opt_one_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25sp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="25sp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:padding="10sp"
        android:text="A. Harry"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="@+id/question_card"
        app:layout_constraintStart_toStartOf="@+id/question_card"
        app:layout_constraintTop_toBottomOf="@+id/question_card"
        app:strokeColor="#00BCD4"
        app:strokeWidth="1dp">

    </com.google.android.material.button.MaterialButton>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/opt_two_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25sp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="25sp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:padding="10sp"
        android:text="B. Harry"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="@+id/opt_one_card"
        app:layout_constraintStart_toStartOf="@+id/opt_one_card"
        app:layout_constraintTop_toBottomOf="@+id/opt_one_card"
        app:strokeColor="#00BCD4"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/opt_three_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25sp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="25sp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:padding="10sp"
        android:text="C. Harry"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="@+id/opt_two_card"
        app:layout_constraintStart_toStartOf="@+id/opt_two_card"
        app:layout_constraintTop_toBottomOf="@+id/opt_two_card"
        app:strokeColor="#00BCD4"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/opt_four_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25sp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="25sp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:padding="10sp"
        android:text="D. Harry"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="@+id/opt_three_card"
        app:layout_constraintStart_toStartOf="@+id/opt_three_card"
        app:layout_constraintTop_toBottomOf="@+id/opt_three_card"
        app:strokeColor="#00BCD4"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25sp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="25sp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:padding="10sp"
        android:text="Answer"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/opt_four_card"
        app:layout_constraintStart_toStartOf="@+id/opt_four_card"
        app:layout_constraintTop_toBottomOf="@+id/opt_four_card"
        app:strokeColor="#00BCD4"
        app:strokeWidth="1dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
